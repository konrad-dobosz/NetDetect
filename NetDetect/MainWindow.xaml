<Window x:Class="NetDetect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetDetect"
        mc:Ignorable="d"
        Title="NetDetect" Height="421" Width="384">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="266" Margin="0,47,0,0" VerticalAlignment="Top" Width="274">
            <Label Content="Początkowy adres IP:"/>
            <TextBox x:Name="tbxStartIP" TextWrapping="Wrap" Text="192.168.0.1" VerticalAlignment="Top"/>
            <Label Content="Końcowy adres IP"/>
            <TextBox x:Name="tbxEndIP"  TextWrapping="Wrap" Text="192.168.0.1" VerticalAlignment="Top"/>
            <Button x:Name="btnScan" Content="Skanuj" VerticalAlignment="Top" Click="btnScan_Click"/>
            <ListBox x:Name="lbx1" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="176"/>
        </StackPanel>

    </Grid>
</Window>
